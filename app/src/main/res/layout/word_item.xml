<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:columnCount="2"
    android:rowCount="3"
    android:layout_margin="16dp"
    android:padding="8dp"
    android:background="@drawable/rounded_corners"
    >

    <TextView
        android:id="@+id/word"
        android:layout_row="0"
        android:layout_column="0"
        style="@style/Word"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        tools:text="word"/>

    <TextView
        android:id="@+id/definition"
        style="@style/Definition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:ellipsize="none"
        android:scrollHorizontally="false"
        android:paddingLeft="16dp"
        android:paddingStart="16dp"
        android:paddingRight="16dp"
        android:paddingEnd="16dp"
        tools:text="Definition of the word. Definition of the word. Definition of the word. Definition of the word. Definition of the word. Definition of the word. Definition of the word. Definition of the word. Definition of the word. " />

    <LinearLayout
        android:id="@+id/thumbs"
        android:orientation="horizontal"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp">
        <ImageView
            android:id="@+id/thumbsUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_thumb_up_black_24dp"
            android:contentDescription="@string/thumbsUp"/>
        <TextView
            android:id="@+id/thumbsUpCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="123"
            style="@style/thumbsText"/>

        <ImageView
            android:id="@+id/thumbsDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_thumb_down_black_24dp"
            android:contentDescription="@string/thumbsDown"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"/>
        <TextView
            android:id="@+id/thumbsDownCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="123"
            style="@style/thumbsText"/>



    </LinearLayout>


</GridLayout>